<Window x:Class="dotNet5781_03B_7232_5482.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03B_7232_5482"
        mc:Ignorable="d"
        Title="MainWindow" Height="531.818" Width="700">
    <Window.Resources>
        <DataTemplate x:Key="MyDataTemplate"
                  DataType="local:Bus">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                   Text="{Binding Path=LicenseNum}" />
                <TextBlock Grid.Column="1"
                   Text="{Binding Path=FirstName}" />
                <TextBlock Grid.Column="2"
                   Text="Last Name: " />
                <TextBlock Grid.Column="3"
                   Text="{Binding Path=LastName}" />
                <CheckBox Grid.Column="4"
                  Content="Is Lecturer?"
                  IsEnabled="False"
                  IsChecked="{Binding Path=IsLecturer}" />
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="0,0,103.333,0.667">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="BusList" Height="257" Margin="12,57,82,0" VerticalAlignment="Top" RenderTransformOrigin="0.98,0.419"  />
        <Button Content="Add Bus" HorizontalAlignment="Left" Margin="33,333,0,0" VerticalAlignment="Top" Width="169" Height="54" Click="Button_Click"/>

    </Grid>
</Window>
