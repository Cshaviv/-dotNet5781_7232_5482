<Window x:Class="PL.WPF.AddStationInLineWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.WPF"
        mc:Ignorable="d"
        Title="AddStationInLineWin" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="272,66,0,0" TextWrapping="Wrap" Text="בחר את התחנה שאתה רוצה להוסיף" VerticalAlignment="Top" Height="28" Width="232"/>
        <ComboBox x:Name="stationComboBox" HorizontalAlignment="Left" Margin="193,100,0,0" VerticalAlignment="Top" Width="472" Height="39"/>
        <GroupBox Header="Choose Option:" HorizontalAlignment="Left" Height="111" Margin="34,137,0,0" VerticalAlignment="Top" Width="505" FontSize="16" FontStyle="Italic" FontWeight="SemiBold">
            <StackPanel Margin="-2,7,2.333,-5" Height="80" VerticalAlignment="Top">

                <RadioButton x:Name ="rbFirst" Content="התחלה" Height="24"  Margin="0,0,323,0" Checked="rbFirst_Checked"/>
                <RadioButton x:Name ="rbLast" Content=" לסוף"  Height="24" Margin="0,0,314,0" Checked="rbLast_Checked"/>
                <RadioButton x:Name ="rbMiddle" Content=" לאמצע" Height="24" Margin="0,0,314,0" Checked="rbMiddle_Checked"/>

            </StackPanel>
        </GroupBox>
        <Button x:Name="AddFirst" Content="להתחלה הוספה" Visibility="Visible" HorizontalAlignment="Left" Margin="217,366,0,0" VerticalAlignment="Top" Width="172" Height="50"/>
        <Button x:Name="AddLast" Content="הוספה לסוף" Visibility="Hidden" HorizontalAlignment="Left" Margin="29,361,0,0" VerticalAlignment="Top" Width="172" Height="50"/>
        <Button x:Name="AddMiddle" Content=" לאמצע הוספה" Visibility="Hidden"  HorizontalAlignment="Left" Margin="472,360,0,0" VerticalAlignment="Top" Width="172" Height="50" Click="AddMiddleClick"/>
        <TextBlock x:Name="PrevStatTextBlock" Visibility="Hidden"  HorizontalAlignment="Left"  Margin="152,265,0,0" TextWrapping="Wrap" Text="בחר את התחנה שנמצאת לפני התחנה שאתה רוצה להוסיף " VerticalAlignment="Top" Height="28" Width="306"/>
        <ComboBox x:Name="PrevstationComboBox" Visibility="Hidden" HorizontalAlignment="Left" Margin="76,306,0,0" VerticalAlignment="Top" Width="485" Height="39"/>
        <TextBlock x:Name="DistanceTextBlock" Visibility="Hidden" HorizontalAlignment="Left" Margin="595,271,-33.667,0" TextWrapping="Wrap" Text="dis from next" VerticalAlignment="Top" Height="28" Width="232"/>
        <TextBlock x:Name="TimeTextBlock" Visibility="Hidden" HorizontalAlignment="Left" Margin="595,318,-33.667,0" TextWrapping="Wrap" Text="time from next" VerticalAlignment="Top" Height="28" Width="232"/>
        <TextBox x:Name="DistanceTextBox" Visibility="Hidden" HorizontalAlignment="Left" Height="23" Margin="597,289,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TimeTextBox" Visibility="Hidden" HorizontalAlignment="Left" Height="23" Margin="602,356,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
