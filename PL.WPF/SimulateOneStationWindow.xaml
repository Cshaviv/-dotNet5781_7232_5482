        <TextBlock x:Name="timerTextBlock" HorizontalAlignment="Left" Margin="47,346,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Height="49" Width="249"/>
        <ListBox x:Name="nisayon" HorizontalAlignment="Left" Height="100" Margin="308,230,-27.667,0" VerticalAlignment="Top" Width="513"/>
        <TextBlock x:Name="statAdress" HorizontalAlignment="Left" Margin="349,87,0,0" TextWrapping="Wrap" Text="{Binding}" VerticalAlignment="Top" Height="21" Width="216"/>
        <Label Content=":שם התחנה" HorizontalAlignment="Right" Margin="0,52,71,337" Grid.Row="0" VerticalAlignment="Center" Width="122" FontFamily="Dubai Medium" FontWeight="Bold"/>
        <Label Content=":כתובת" HorizontalAlignment="Right" Margin="0,78,78,311" VerticalAlignment="Center" Width="115" FontFamily="Dubai Medium" FontWeight="Bold"/>
        <Label Content=":קוד" HorizontalAlignment="Right" Margin="0,107,71,282" VerticalAlignment="Center" Width="115" FontFamily="Dubai Medium" FontWeight="Bold"/>

    </Grid>

</Window>
